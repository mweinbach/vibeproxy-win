<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="VibeProxy.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:VibeProxy.WinUI.Helpers"
    xmlns:local="using:VibeProxy.WinUI"
    xmlns:ui="using:Windows.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibility" />
            <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
            <helpers:ExpiredToBrushConverter x:Key="ExpiredBrush" />
            <helpers:StringToVisibilityConverter x:Key="StringToVisibility" />
            <helpers:BoolToStatusBrushConverter x:Key="StatusBrush" />
            <helpers:StatusToSeverityConverter x:Key="StatusToSeverityConverter" />

            <!-- Modern color palette -->
            <ui:Color x:Key="AppPrimaryColor">#0078D4</ui:Color>
            <ui:Color x:Key="AppSecondaryColor">#2B88D8</ui:Color>
            <ui:Color x:Key="AppBackgroundTertiary">#1A1A1A</ui:Color>
            
            <SolidColorBrush x:Key="AppPrimaryBrush" Color="{StaticResource AppPrimaryColor}" />
            <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppSecondaryColor}" />
            
            <StaticResource x:Key="NavigationViewContentGridForeground" ResourceKey="TextFillColorPrimaryBrush" />
            <StaticResource x:Key="NavigationViewItemBackgroundSelected" ResourceKey="SubtleFillColorSecondaryBrush" />

            <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="CornerRadius" Value="6" />
            </Style>

            <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Background" Value="{StaticResource AppPrimaryBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="CornerRadius" Value="6" />
            </Style>

            <Style TargetType="Expander">
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>

            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}" />
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
